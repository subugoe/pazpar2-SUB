<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../xsl/doc/pazpar2-docs.xsl"?>
<service
		xmlns="http://www.indexdata.com/pazpar2/1.0"
		xmlns:xi="http://www.w3.org/2001/XInclude"
		id="Math">
<!--
	Targets used for vifamath main search at:
	http://vifamath.de/
	http://vifamath.de/?L=1

	* GBV Databases (SRU):
		* Göttingen Opac
		* Fachkatalog Mathematik without Göttingen books
		* Online Contents Mathematik
	* SUB Solr Indexes (SSGFI1):
		* Math Guide
		* Digitalisate
		* Jahrbuch-Datenbank
	* SUB Solr Indexes (Harvesting):
		* arXiv
	* old Z39.50 Service:
		* Dissertations
	* FIZ Karlsruhe (SRU):
		* ElibM

	2010-2012: Sven-S. Porst, SUB Göttingen <porst@sub.uni-goettingen.de>
-->

	<settings src="settings/gbv-sru-neu.xml"/>
	<settings>
		<set target="sru.gbv.de/opac-de-7" name="pz:name" value="SUB Göttingen (GBV)"/>
		<set target="ssgfi1.sub.uni-goettingen.de:8081/solr/math" name="pz:maxrecs" value="250"/>

		<set target="sru.gbv.de/fachopac-mat" name="pz:name" value="Fachkatalog Mathematik"/>
		<set target="sru.gbv.de/fachopac-mat" name="pz:pqf_strftime" value="@not %% @attr 1=pica.bib 0007"/>

		<set target="sru.gbv.de/olcssg-mat" name="pz:name" value="OLC Mathematik"/>
		<set name="pz:allow" target="sru.gbv.de/olcssg-mat" value="1"/>
	</settings>


	<settings src="settings/SUB-Guides-solr.xml"/>
	<settings>
		<set target="ssgfi1.sub.uni-goettingen.de:8081/solr/*" name="pz:maxrecs" value="100"/>
		<set target="ssgfi1.sub.uni-goettingen.de:8081/solr/math" name="pz:name" value="Math Guide"/>
		<set target="ssgfi1.sub.uni-goettingen.de:8081/solr/digreg" name="pz:name" value="Digitalisate"/>
		<set target="ssgfi1.sub.uni-goettingen.de:8081/solr/jfm" name="pz:name" value="Jahrbuch-Datenbank"/>
	</settings>

	<settings src="settings/SUB-Harvesting-solr.xml"/>
	<settings>
		<set target="vlib.sub.uni-goettingen.de/solr/math-arxiv" name="pz:name" value="arXiv"/>
		<set target="vlib.sub.uni-goettingen.de/solr/math-arxiv" name="pz:maxrecs" value="100"/>
	</settings>

	<settings src="settings/fiz-elibm.xml"/>

	<settings src="settings/testing/SUB-Guides.xml"/>
	<settings>
		<set target="ssgfi1.sub.uni-goettingen.de:2020/diss" name="pz:name" value="Dissertationen"/>
	</settings>

	<xi:include href="metadata/SUB-default.xml"/>

</service>
